@model ChartJS.ViewModels.Vehicles

<canvas id="myChart" width="400" height="250"></canvas>

<script src ="~/Chart.js/chart.js"></script>
<script>
    var vehSales = @Html.Raw(Json.Serialize(Model.Sales));
    @{
        string[] xAxis = new string[12];
        float[] yAxis = new float[12];
        var i = 0;
    }
    @foreach (var item in Model.Sales)
    {
        xAxis[i] = item.month;
        yAxis[i] = item.numSold;
        i++;
    }
    var ctx = document.querySelector("#myChart").getContext('2d');
    var myChart = new Chart(ctx, {
        type: 'bar',
        data: {
            labels: @Html.Raw(Json.Serialize(xAxis)),
            datasets: [{
                data: @Html.Raw(Json.Serialize(yAxis)),
            backgroundColor: [
                'rgba(255, 99, 132, 0.2)',
                'rgba(54, 162, 235, 0.2)',
                'rgba(255, 206, 86, 0.2)',
                'rgba(75, 192, 192, 0.2)',
                'rgba(153, 102, 255, 0.2)',
                'rgba(255, 159, 64, 0.2)'
            ],
            borderColor: [
                'rgba(255, 99, 132, 1)',
                'rgba(54, 162, 235, 1)',
                'rgba(255, 206, 86, 1)',
                'rgba(75, 192, 192, 1)',
                'rgba(153, 102, 255, 1)',
                'rgba(255, 159, 64, 1)'
            ],
            borderWidth: 1
        }]
        },
        options: {
            plugins: {
                title: {
                    display: true,
                    text: "Vehicle Sales By Month In 2020",
                    font: {
                        size: 36,
                        weight: 'bold'
                    }
                },
                legend: {
                    display: false,
                }
            },
            scales: {
                y: {
                    beginAtZero: true,
                    title: {
                        display: true,
                        text: 'Sales in Millions',
                        font: {
                            size: 18,
                            weight: 'bold'
                        }
                    }
                }
            }
        }
    });
</script>

